# MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MCP Server
MCP_SERVER_NAME=kali-mcp-server
MCP_SERVER_VERSION=1.0.0

# Authentication
JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_EXPIRY=1800  # 30 minutes

# n8n Integration
N8N_WEBHOOK_BASE=https://automation.tampadynamics.com/webhook
N8N_API_KEY=your_n8n_api_key

# AWS Configuration (for Polly)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Raspberry Pi Connection
PI_WEBHOOK_URL=http://raspberrypi.local:5000/webhook
PI_API_KEY=your_pi_api_key

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://robot.nxthreat.io,https://command.nxthreat.io
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true
LOG_DIR=./logs

# Mode Settings
DEFAULT_MODE=kid
REQUIRE_AUTH_FOR_CYBER_MODE=true
SESSION_TIMEOUT=1800  # 30 minutes

# Target Validation (Cyber Mode)
ENABLE_TARGET_VALIDATION=true
ALLOW_LOCALHOST_SCANS=false
