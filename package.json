{
  "name": "nxthreat-monorepo",
  "version": "1.0.0",
  "description": "NXThreat - Kali Robot Monorepo: Dual-purpose Educational & CyberSec Assistant",
  "private": true,
  "workspaces": [
    "mcp-server",
    "nxthreat.io"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:mcp": "npm run dev --workspace=mcp-server",
    "dev:web": "npm run dev --workspace=nxthreat.io",
    "build": "npm-run-all build:*",
    "build:mcp": "npm run build --workspace=mcp-server",
    "build:web": "npm run build --workspace=nxthreat.io",
    "test": "npm-run-all test:*",
    "test:mcp": "npm run test --workspace=mcp-server",
    "clean": "npm-run-all clean:*",
    "clean:mcp": "rm -rf mcp-server/build mcp-server/node_modules",
    "clean:web": "rm -rf nxthreat.io/.next nxthreat.io/node_modules",
    "install-all": "npm install",
    "deploy:web": "cd nxthreat.io && npm run build",
    "pi:sync": "rsync -avz --exclude 'node_modules' --exclude '.git' --exclude 'build' raspberry-pi/ kali@$PI_HOST:~/nxthreat/raspberry-pi/",
    "pi:deploy": "npm run pi:sync && ssh kali@$PI_HOST 'cd ~/nxthreat/raspberry-pi && ./scripts/setup.sh'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nxthreat.git"
  },
  "keywords": [
    "robot",
    "education",
    "cybersecurity",
    "raspberry-pi",
    "mcp",
    "kali-linux"
  ],
  "author": "Matt Santucci",
  "license": "MIT"
}
